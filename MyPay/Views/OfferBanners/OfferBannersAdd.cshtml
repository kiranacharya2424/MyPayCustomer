@model MyPay.Models.Add.AddOfferBanners
@{
    ViewBag.Title = "OfferBannersAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="nk-content ">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block">
                    <div class="card card-bordered">
                        <div class="card-aside-wrap">
                            <div class="card-inner">
                                <div class="nk-block">
                                    <div class="nk-block-head">
                                        <div>
                                            <ul class="nav nav-tabs nav-tabs-mb-icon nav-tabs-card">
                                                <li class="nav-item">
                                                    <h5 class="title">Add Offer Banners</h5>
                                                </li>
                                            </ul>
                                        </div>
                                        <div id="dvMsgSuccess" class="tb-status text-success" style="text-align:center; font-weight:bold">
                                            @ViewBag.SuccessMessage
                                        </div>
                                        <div id="dvMsg" class="tb-status text-danger" style="text-align: center; font-weight: bold">
                                            @ViewBag.Message
                                        </div>
                                    </div><!-- .nk-block-head -->
                                    <div class="nk-block-head nk-block-head-line mt-3 mb-2">
                                        <h6 class="title overline-title text-base">Offer Banners Detail</h6>
                                    </div>

                                    <div class="row gy-4 justify-center">
                                        <div class="col-md-6">
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Priority</label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.DropDownListFor(m => m.Priority, ViewBag.Priority as SelectList, "", new { @id = "drpPriority", @class = "form-select form-control form-control-md" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Name <strong class="text-danger">*</strong></label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-md", @Required = "required" })
                                                            <span class="tb-status text-danger"> @Html.ValidationMessageFor(model => model.Name)</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Type</label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.EnumDropDownListFor(m => m.EnumTypeProviders, "--Select Service--", new { @class = "form-control form-control-md" })
                                                            @Html.HiddenFor(m => m.Type)
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3" id="url">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">URL <strong class="text-danger">*</strong></label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.TextBoxFor(m => m.URL, new { @class = "form-control form-control-md" })
                                                            <span class="tb-status text-danger"> @Html.ValidationMessageFor(model => model.URL)</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">From Date<strong class="text-danger">*</strong></label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.TextBoxFor(m => m.FromDate, new { @value = Model.FromDate.ToString("dd/MM/yyyy hh:mm:ss tt"), @class = "form-control form-control-md date-picker datePicker" })
                                                            <span class="tb-status text-danger"> @Html.ValidationMessageFor(model => model.FromDate)</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">To Date<strong class="text-danger">*</strong></label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.TextBoxFor(m => m.ToDate, new { @value = Model.ToDate.ToString("dd/MM/yyyy hh:mm:ss tt"), @class = "form-control form-control-md date-picker datePicker" })
                                                            <span class="tb-status text-danger"> @Html.ValidationMessageFor(model => model.ToDate)</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Image <strong class="text-danger">*</strong></label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            <div class="custom-file text-left">
                                                                <input type="file" multiple class="custom-file-input" id="Image" onchange="PreviewImageOfflineBinaryData(this,'Image',2000)" name="Image">
                                                                <label class="custom-file-label" for="customMultipleFiles">Choose files</label>
                                                            </div>
                                                            <div class="mt-3">
                                                                <a id="previewImage" class="gallery-image popup-image" href="~/Images/BannerImages/@Model.Image">
                                                                    @if (string.IsNullOrEmpty(Model.Image))
                                                                    {
                                                                        <img ID="targetImage" class="custom-file-inputrounded-top" width="120" src="~/Content/assets/Images/noimageblank.png" alt=""> }
                                                                    else
                                                                    {
                                                                        <img ID="targetImage" class="custom-file-inputrounded-top" width="120" src="~/Images/BannerImages/@Model.Image" alt="">}
                                                                </a>
                                                                @Html.HiddenFor(m => m.Image)
                                                                <span class="tb-status text-danger"> @Html.ValidationMessageFor(model => model.Image)</span>
                                                                <input type="hidden" id="hdnImageDataSeleted" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Active</label>
                                                        </div>
                                                        <div class="col-lg-2 col-sm-2">
                                                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control form-control-sm" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-5">
                                        <div class="col-lg-12 col-sm-6 justify-center">
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-primary text-center mr-2">Submit</button>
                                                <button type="button" onclick="window.location='/OfferBanners/Index'" class="btn btn-light text-center">List</button>
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- .nk-block -->
                            </div><!-- .card-content -->
                            <!-- .nav-tabs -->
                        </div><!-- .card-aside-wrap -->
                    </div><!-- .card -->
                </div><!-- .nk-block -->
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Content/assets/js/userscripts.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        debugger;
        $("#EnumTypeProviders").val($("#Type").val());

        $("#url").show();
        if ($("#EnumTypeProviders").val() == "1000") {
            $("#url").show();
            $("#url").attr("required", "true");

        } else {
            $("#url").hide();
            $("#url").attr("required", "false");

        }

    });

    $("#EnumTypeProviders").click(function () {
        debugger;
        console.log($("#EnumTypeProviders").val());
        if ($("#EnumTypeProviders").val() == "1000") {
            $("#url").show();
            $("#URL").val(null);

        } else {
            $("#url").hide();

        }
    });

</script>