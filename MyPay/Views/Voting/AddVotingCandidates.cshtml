@model MyPay.Models.Add.AddVotingCandidate
@{
    ViewBag.Title = "AddVotingCandidates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="nk-content ">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block">
                    <div class="card card-bordered">
                        <div class="card-aside-wrap">
                            <div class="card-inner">
                                <div class="nk-block">
                                    <div class="nk-block-head">
                                        <div>
                                            <ul class="nav nav-tabs nav-tabs-mb-icon nav-tabs-card">
                                                <li class="nav-item">
                                                    <h5 class="title">Add Voting Candidate</h5>
                                                </li>
                                            </ul>
                                        </div>
                                        <div id="dvMsgSuccess" class="tb-status text-success" style="text-align:center; font-weight:bold">
                                            @ViewBag.SuccessMessage
                                        </div>
                                        <div id="dvMsg" class="tb-status text-danger" style="text-align: center; font-weight: bold">
                                            @ViewBag.Message
                                        </div>
                                    </div><!-- .nk-block-head -->
                                    <div class="nk-block-head nk-block-head-line mt-3 mb-2">
                                        <h6 class="title overline-title text-base">Voting Candidate Detail</h6>
                                    </div>

                                    <div class="row gy-4 justify-center">
                                        <div class="col-md-6">
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Select Competition<strong class="text-danger">*</strong></label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.DropDownListFor(m => m.VotingCompetitionID, (IEnumerable<SelectListItem>)ViewBag.VOTINGCOMPETITIONID as SelectList, new { @class = "form-select form-control form-control-md" })
                                                            @Html.HiddenFor(m => m.VotingCompetitionID)
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Contestant No.</label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.TextBoxFor(m => m.ContentestNo, new { @class = "form-control form-control-md" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Name</label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-md" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Age</label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.TextBoxFor(m => m.Age, new { @class = "form-control form-control-md" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Gender</label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.DropDownListFor(m => m.Gender, ViewBag.Gender as SelectList, "", new { @class = "form-select form-control form-control-md" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Description <strong class="text-danger">*</strong></label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control form-control-md" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Image <strong class="text-danger">*</strong></label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            <div class="custom-file text-left">
                                                                <input type="file" multiple class="custom-file-input" id="Image" onchange="PreviewImage(this,'Image',2000)" name="Image">
                                                                <label class="custom-file-label" for="customMultipleFiles">Choose files</label>
                                                            </div>
                                                            <div class="mt-3">
                                                                <a class="gallery-image popup-image" href="~/Images/VotingCandidate/@Model.Image">
                                                                    @if (string.IsNullOrEmpty(Model.Image))
                                                                    {
                                                                        <img ID="targetImage" class="custom-file-inputrounded-top" width="120" src="~/Content/assets/Images/noimageblank.png" alt=""> }
                                                                    else
                                                                    {
                                                                        <img ID="targetImage" class="custom-file-inputrounded-top" width="120" src="~/Images/VotingCandidate/@Model.Image" alt="">}
                                                                </a>
                                                                @Html.HiddenFor(m => m.Image)
                                                                <span class="tb-status text-danger"> @Html.ValidationMessageFor(model => model.Image)</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Address</label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control form-control-md" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">State <strong class="text-danger">*</strong></label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.TextBoxFor(m => m.State, new { @class = "form-control form-control-md" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">City <strong class="text-danger">*</strong></label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.TextBoxFor(m => m.City, new { @class = "form-control form-control-md" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Zip Code <strong class="text-danger">*</strong></label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control form-control-md", @maxlength = "10" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Contact Number <strong class="text-danger">*</strong></label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control form-control-md", @pattern = "[1-9]{1}[0-9]{9}", @maxlength = "10", @onkeypress = "return isNumberKey(this, event);" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Email Id<strong class="text-danger">*</strong></label>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            @Html.TextBoxFor(m => m.EmailID, new { @class = "form-control form-control-md" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-sm-12 mt-3">
                                                <div class="form-group">
                                                    <div class="row form-control-wrap">
                                                        <div class="col-lg-4 col-sm-4">
                                                            <label class="form-label">Active</label>
                                                        </div>
                                                        <div class="col-lg-2 col-sm-2">
                                                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control form-control-sm" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-5">
                                        <div class="col-lg-12 col-sm-6 justify-center">
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-primary text-center mr-2">Submit</button>
                                                <button type="button" onclick="window.location='/Voting/VotingCandidateList'" class="btn btn-light text-center">List</button>
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- .nk-block -->
                            </div><!-- .card-content -->
                            <!-- .nav-tabs -->
                        </div><!-- .card-aside-wrap -->
                    </div><!-- .card -->
                </div><!-- .nk-block -->
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Content/assets/js/userscripts.js"></script>

<script type="text/javascript">
</script>