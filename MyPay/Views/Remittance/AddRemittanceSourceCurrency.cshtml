

@{
    ViewBag.Title = "AddRemittanceSourceCurrency";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="nk-content ">
    <input type="hidden" id="hdnIds" value="" />
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block-head nk-block-head-sm">
                    <div class="nk-block-between">
                        <div class="nk-block-head-content">
                            <h3 class="nk-block-title page-title">Remittance Source Currency</h3>
                        </div>
                    </div>
                    <div class="nk-block">
                        <div class="card card-bordered">
                            <div class="card-aside-wrap">
                                <div class="card-inner">
                                    <div class="nk-block">
                                        <div class="nk-block-head">
                                            <div id="dvMessage" class="form-group" style="color:red">
                                                @ViewBag.Message
                                            </div>
                                            <div id="dvSuccessMessage" class="form-group" style="color:green">
                                                @ViewBag.SuccessMessage
                                            </div>
                                        </div><!-- .nk-block-head -->
                                        <div class="nk-block-head nk-block-head-line mt-3 mb-2">
                                            <h6 class="title overline-title text-base">Remittance Source Currency</h6>
                                        </div>
                                        <div class="row gy-4">
                                            <div class="col-lg-4 col-sm-6">
                                                <div class="form-group">
                                                    <div class="form-control-wrap">
                                                        <label class="form-label">Select Currency <strong class="text-danger">*</strong></label>
                                                        @Html.DropDownList("CurrencyList", ViewBag.CurrencyList as SelectList, new { @id = "CurrencyId", @class = "form-select form-control form-control-md" })

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row gy-4" id="dvPairCurrencies" style="display:none;">
                                            <div class="col-lg-4 col-sm-6">
                                                <div class="form-group">
                                                    <div class="form-control-wrap">
                                                        <label class="form-label" id="lblPairCurrencies"></label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div><!-- .nk-block -->
                                    <!--</div>
                                            </div>
                                        </div>
                                    </div>-->
                                    <!-- .nk-block -->
                                </div><!-- .card-content -->
                            </div><!-- .card-aside-wrap -->
                            <div class="card-inner position-relative card-tools-toggle pb-3 pt-3">
                                <!-- <span class="preview-title-lg overline-title mb-4">User List</span> -->
                                <div class="card-title-group">
                                    <div class="card-tools">
                                        <span class="preview-title-lg overline-title pb-0">Destination Currency List</span>
                                    </div><!-- .card-tools -->
                                </div><!-- .card-title-group -->
                            </div><!-- .card-inner -->
                            <div id="dvtblist" class="card-inner table-responsive">
                                <table id="tblmerlist" class="nowrap nk-tb-list nk-tb-ulist" data-auto-responsive="false">
                                    <thead>
                                        <tr class="nk-tb-item nk-tb-head">
                                            @*<th class="nk-tb-col"><span class="sub-text">@Html.DisplayName("Date")</span></th>*@
                                            <th class="nk-tb-col tb-col-lg"><span class="sub-text">@Html.DisplayName("Currency Name")</span></th>
                                            @*<th class="nk-tb-col tb-col-md"><span class="sub-text">@Html.DisplayName("Currency Id")</span></th>*@
                                            <th class="nk-tb-col tb-col-md"><span class="sub-text">@Html.DisplayName("Select")</span></th>
                                        </tr>
                                    </thead>
                                </table>
                                <div class="nk-block">
                                    <div class="row mt-5">
                                        <div class="col-lg-12 col-sm-6">
                                            <div class="form-group">
                                                <a href="javascript:void(0);" class="btn btn-primary text-center mr-2" id="btnSubmitSource" onclick="SubmitSourceCurrency();">Save</a>
                                                @*<a href="javascript:void(0);" class="btn btn-success text-center mr-2" id="btnSubmitDestination" onclick="SubmitDestinationCurrency();">Save Destination Currency</a>*@
                                                @*<button type="button" onclick="window.location='/Remittance/RemittanceList'" class="btn btn-light text-center mr-2">List</button>*@

                                            </div>
                                        </div>
                                    </div>
                                </div><!-- .nk-block -->
                            </div><!-- .card-inner -->
                        </div><!-- .card -->
                    </div><!-- .nk-block -->
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Content/assets/js/userscripts.js"></script>
<script type="text/javascript" src="~/Content/assets/js/dtable_RemittanceUserCurrencies.js"></script>
<style>
    .dataTables_length {
        display: none;
    }

    .dt-buttons {
        display: none;
    }

    .dataTables_info {
        display: none;
    }

    .dataTables_paginate {
        display: none;
    }
</style>
<script>
    $(function () {
        $("#CurrencyId").change(function () {
            $("#lblPairCurrencies").html("");
            var CurrencyId = $("#CurrencyId option:selected").val();
            //$("#CurrencyCode").val(value);
            $('#AjaxLoader').show();
            setTimeout(
                function () {
                    BindSourceDestinationCurrenciesDataTable();
                    
                    $.ajax({
                        type: "POST",
                        url: "/Remittance/GetPairedCurrencyLists",
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        async: false,
                        data: '{"CurrencyId":"' + CurrencyId + '"}',
                        success: function (response) {
                            if (response != null) {
                                $("#dvPairCurrencies").css("display", "block");
                                $("#lblPairCurrencies").html("These Currencies are Paired with selected Source Currency: "+ response);
                                //$("#dvSuccessMessage").html(response);
                            }
                            else {
                                JsonOutput = "Something went wrong. Please try again later.";
                            }
                        },
                        failure: function (response) {
                            JsonOutput = (response.responseText);
                            $("#dvMessage").html(JsonOutput);
                        },
                        error: function (response) {
                            JsonOutput = (response.responseText);
                            $("#dvMessage").html(JsonOutput);
                        }

                        });
                    $('#AjaxLoader').hide();
                }, 100);
        });
    });
        $(document).ready(function () {
            $("#dvtblist").css("display", "block");
            $("#dvPairCurrencies").css("display", "none");
            BindSourceDestinationCurrenciesDataTable();
        });


        function SubmitDestinationCurrency() {
            var CurrencyId = $("#CurrencyId option:selected").val();
            $('#AjaxLoader').show();
            setTimeout(
                function () {

                    if (CurrencyId == "" || CurrencyId == "0") {
                        $("#dvMessage").html('Please select currency');
                    }
                    else {
                        $.ajax({
                            type: "POST",
                            url: "/Remittance/RemittanceDestinationCurrency",
                            contentType: "application/json; charset=utf-8",
                            dataType: "json",
                            async: false,
                            data: '{"CurrencyId":"' + CurrencyId + '"}',
                            success: function (response) {
                                if (response != null) {
                                    if (response == "success") {
                                        $("#dvSuccessMessage").html(response);
                                    }
                                    else {
                                        $("#dvMessage").html(response);
                                    }
                                }
                                else {
                                    JsonOutput = "Something went wrong. Please try again later.";
                                }
                            },
                            failure: function (response) {
                                JsonOutput = (response.responseText);
                                $("#dvMessage").html(JsonOutput);
                            },
                            error: function (response) {
                                JsonOutput = (response.responseText);
                                $("#dvMessage").html(JsonOutput);
                            }
                        });
                    }
                    $('#AjaxLoader').hide();
                }, 100);
        }
</script>
