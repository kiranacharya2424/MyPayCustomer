
@{ ViewBag.Title = "CurrencyConversionHistoryList";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<link href="//cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="nk-content ">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block-head nk-block-head-sm">
                    <div class="nk-block-between">
                        <div class="nk-block-head-content">
                            <h3 class="nk-block-title page-title">Currency Conversion History</h3>
                        </div><!-- .nk-block-head-content -->
                        <!<!-- .nk-block-head-content -->
                        <!-- .toggle-wrap -->
                        <!--</div>--><!-- .nk-block-head-content -->
                    </div><!-- .nk-block-between -->
                </div><!-- .nk-block-head -->

                <div class="nk-block">
                    <div class="card card-bordered card-stretch">
                        <div class="card-inner-group">
                            <div class="card-inner position-relative card-tools-toggle pb-5">
                                <span class="preview-title-lg overline-title mb-4">Quick Search</span>
                                <div class="row gy-4">

                                    <div class="col-lg-2 col-sm-6">
                                        <div class="form-group">
                                            <div class="form-control-wrap">
                                                @Html.TextBox("SourceCurrencyName","", new { @id = "SourceCurrencyName", @placeholder = "Source Currency", @class = "form-control form-control-md form-control-outlined", @autocomplete = "off" })
                                               
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-sm-6">
                                        <div class="form-group">
                                            <div class="form-control-wrap">
                                                @Html.TextBox("DestinationCurrencyName", "", new { @id = "DestinationCurrencyName", @placeholder = "Destination Currency", @class = "form-control form-control-md form-control-outlined", @autocomplete = "off" })
                                                
                                        </div>
                                    </div>
                                        </div>
                                    <div class="col-lg-2 col-sm-6">
                                        <div class="form-group">
                                            <div class="form-control-wrap">
                                                @Html.TextBox("BankConversionRateCode", "", new { @id = "BankConversionRateCode", @placeholder = "Conversion Rate", @class = "form-control form-control-md form-control-outlined", @autocomplete = "off" })
                                               
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-sm-6">
                                        <div class="form-group">
                                            <div class="form-control-wrap">
                                                @Html.TextBox("InverseRate", "", new { @id = "InverseRate", @placeholder = "Inverse Rate", @class = "form-control form-control-md form-control-outlined", @autocomplete = "off" })
                                                
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-sm-6">
                                        <div class="form-group">
                                            <div class="form-control-wrap">
                                                @Html.TextBox("Markup", "", new { @id = "Markup", @placeholder = "Markup ", @class = "form-control form-control-md form-control-outlined", @autocomplete = "off" })
                                               
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-sm-6">
                                        <div class="form-group">
                                            <a class="btn btn-primary text-center text-white" onclick="return bindtable();">Search</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="dvtblist" class="card-inner">
                                <div class="table-responsive">
                                    <table id="tblist" class="nowrap nk-tb-list nk-tb-ulist" data-auto-responsive="false">
                                        <thead>
                                            <tr>
                                                
                                                <th class="nk-tb-col tb-col-md">
                                                    <span class="sub-text">
                                                        @Html.DisplayName("Created Date")
                                                    </span>
                                                </th>
                                                <th class="nk-tb-col tb-col-md">
                                                    <span class="sub-text">
                                                        @Html.DisplayName("Updated Date")
                                                    </span>
                                                </th>
                                                <th class="nk-tb-col tb-col-md">
                                                    <span class="sub-text">
                                                        @Html.DisplayName("Source Currency")
                                                    </span>
                                                </th>
                                                <th class="nk-tb-col tb-col-md">
                                                    <span class="sub-text">
                                                        @Html.DisplayName("Destination Currency")
                                                    </span>
                                                </th>
                                                
                                                <th class="nk-tb-col tb-col-md">
                                                    <span class="sub-text">
                                                        @Html.DisplayName("Conversion Rate")
                                                    </span>
                                                </th>
                                                <th class="nk-tb-col tb-col-md">
                                                    <span class="sub-text">
                                                        @Html.DisplayName("Inverse Rate")
                                                    </span>
                                                </th>
                                                <th class="nk-tb-col tb-col-md">
                                                    <span class="sub-text">
                                                        @Html.DisplayName("Mark up")
                                                    </span>
                                                </th><th class="nk-tb-col tb-col-md">
                                                    <span class="sub-text">
                                                        @Html.DisplayName("Created By")
                                                    </span>
                                                </th><th class="nk-tb-col tb-col-md">
                                                    <span class="sub-text">
                                                        @Html.DisplayName("Ip Address")
                                                    </span>
                                                </th>

                                                
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div><!-- .card-inner -->
                        </div><!-- .card-inner-group -->
                    </div><!-- .card -->
                </div><!-- .nk-block -->
            </div>
        </div>
    </div>
</div>
 

<script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
<script src="~/Content/assets/js/dtable_remittanceHistory.js"></script>

<script>
    $(document).ready(function () {
        $("#dvtblist").css("display", "none");
        @*var MerchantId = '@ViewBag.MerchantId';
        {
            $("#dvtblist").css("display", "block");
            BindRemittanceHistoryDataTable();
        }*@
    });

    function bindtable() {
        $("#dvtblist").css("display", "block");
        BindRemittanceHistoryDataTable();
    };
</script>
