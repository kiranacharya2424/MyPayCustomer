<script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
<script src="~/content/assets/js/dtable_Remittance.js"></script>

<script>
    $(document).ready(function () {
        $("#dvtblist").css("display", "none");
        $('.date-picker').datepicker({
            format: "dd-M-yyyy"
        }).datepicker('setDate', 'today');
        var MerchantId = '@ViewBag.MerchantId';
        if (MerchantId != "") {
            $("#dvtblist").css("display", "block");
            BindRemittanceBankDataTable();
        }
    });

    function bindtable() {
        $("#dvtblist").css("display", "block");
        BindRemittanceBankDataTable();
    };
</script>
