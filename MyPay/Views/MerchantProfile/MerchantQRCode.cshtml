@model MyPay.Models.Add.AddMerchant
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MerchantLayout.cshtml";
}

<div class="nk-content ">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block-head nk-block-head-sm">
                    <div class="nk-block-between">
                        <div class="nk-block-head-content">
                            <h3 class="nk-block-title page-title">Merchant QR Details</h3>
                        </div>
                    </div>
                </div>
                    <div class="nk-block">
                        <div class="card card-bordered card-stretch">
                            <div class="card-inner-group">
                                <div class="card-inner position-relative card-tools-toggle pb-5">
                                @if (Model.MerchantType == (int)MyPay.Models.Add.AddMerchant.MerChantType.Merchant)
                                {
                                    <div class="nk-block">
                                        <div class="nk-block-head">
                                            <div class="form-group" style="color:red">
                                                @ViewBag.Message
                                            </div>
                                            <div class="form-group" style="color:green">
                                                @ViewBag.SuccessMessage
                                            </div>
                                        </div><!-- .nk-block-head -->
                                        <div class="nk-block-head nk-block-head-line mt-3 mb-2">
                                        </div>
                                        <div class="row gy-4">
                                            <div class="col-sm-12" style="text-align:center; width:50%; margin:auto">


                                                <center style="width: 100%; height: 100%; background-color: #fff;">
                                                    <div class="outer" style="max-width: 650px;margin: 0 auto 0;background: #cf5128;background: -moz-linear-gradient(315deg, #cf5128 77%, #e0a137 100%);background: -webkit-linear-gradient(315deg, #cf5128 77%, #e0a137 100%);background: linear-gradient(315deg, #cf5128 77%, #e0a137 100%);padding: 18px;">

                                                        <div class="mob-col-padding" style="text-align: center; background:#fff;">
                                                            <h2 class="mob-title1" style="margin-top:0px;margin-bottom: 5px;font-size: 50px;font-weight: 700;line-height: normal; color:#e35527;">Scan & Pay</h2>
                                                            <p style="margin:0 0 50px 0; padding:0px;" class="tagline"><img src="@ViewBag.Host/Content/assets/MyPayPayments/images/tagline.png" style="max-width: 500px; width: 100%;"></p>
                                                            <div class="qr"><img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(ViewBag.QRCode))" style="max-width: 300px; width: 100%;"></div>
                                                            <h3 style="color:#2d2d2d;font-size: 42px;">   @Html.DisplayFor(m => m.OrganizationName, new { @class = "", }) </h3>
                                                            <div><img src="@ViewBag.Host/Content/assets/MyPayPayments/images/footer.png" style="width: 650px;margin: 0 0 -10px 0;"></div>
                                                        </div>
                                                    </div>
                                                </center>

                                                <br />
                                                <div class="col-sm-12">
                                                    <a class="btn btn-primary" href="/MerchantProfile/MerchantQRCodeExport?MerchantContact=@Model.ContactNo">Download PDF</a>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                }
                               else { 
                                <div class="nk-block">
                                    <div class="nk-block-head">
                                        <div class="form-group" style="color:red;text-align:center;">
                                            QR Code not available for bank
                                            </div>
                                        </div>
                                    </div>
                                    }
                                </div><!-- .nk-block -->
                            </div><!-- .card-content -->
                        </div><!-- .card-aside-wrap -->
                    </div><!-- .card -->
               <!-- .nk-block -->
            </div>
        </div>
    </div>
</div>
<style type="text/css">
    body {
        margin: 0;
        padding: 0;
        font-family: 'Montserrat', sans-serif;
    }

    a {
        color: #666;
    }

    table.mobile-table tbody tr td {
        display: block;
        width: 100%;
        padding-left: 0px !important;
    }

    .mob-social tbody tr td {
        padding: 0 !important;
    }

    h2.mob-title1 {
        font-size: 55px !important;
    }

    h3 {
        font-size: 22px !important;
    }

    .qr img, .tagline img {
        max-width: 280px !important;
    }

    .outer {
        padding: 10px !important;
    }
</style>