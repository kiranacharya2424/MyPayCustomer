<script>
    $("#btnPaymentScreenBack").click(function () {
        $("#DivProceedToPay").prev().show();
        $("#DivProceedToPay").hide();
        $("html, body").animate({ scrollTop: "0" });
    });

    function GetScratchedCoupons() {
        var ServiceId = $("#hdnServiceID").val();
        $('#AjaxLoader').show();
        setTimeout(
            function () {
                $.ajax({
                    url: "MyPayUser/MyPayUserGetScratchedCoupon",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    async: false,
                    dataType: "json",
                    data: '{"ServiceId":"' + ServiceId + '"}',
                    success: function (response) {
                        debugger;
                        var jsonData = $.parseJSON(response);
                        var str = "";
                        if (jsonData.data == '') {
                            str += '<div class="col-md-12 mb-3 text-center">';
                            str += ' <label style="font-size:20px;" class="w-100">No Data Found</label>';
                            str += '<img id="nodatafound" src="./Content/assets/MyPayUserApp/images/BetterLuckImage.svg"/>';
                            str += '</div>';
                        }

                        for (var i = 0; i < jsonData.data.length; ++i) {

                            str += '<div class="col-md-4 mb-3">';
                            str += '<div class="votingsec p-3 round bg-lighter position-relative couponsscratched-wt">';
                            str += '<div class="scratchinner" style="height:160px;display: flex;flex-direction:column;justify-content:center;align-items:center;">';
                            str += ' <label>' + jsonData.data[i].CouponCode + '</label>'
                            //str += ' <label>' + jsonData.data[i].MaximumAmount + '</label>'
                            str += ' <label class="percent">' + jsonData.data[i].CouponPercentage + '%</label>'
                            str += ' <label class="Description">' + jsonData.data[i].Description + '</label>'
                            if (jsonData.data[i].IsUsed == 1) {
                                str += ' <label style="color:green">Coupon Redeemed </label>'
                            }
                            else if (jsonData.data[i].IsExpired == 1) {
                                str += ' <label style="color:red">Coupon Expired </label>'
                            }
                            else {
                                str += ' <label style="color:Orange">Expiry on ' + (jsonData.data[i].ToDate).split('T')[0] + ' </label>'
                            }
                            str += '<a id="btn_applycoupon" class="mt-auto btn btn-sm btn-danger color-black d-flex align-items-center text-white text-center" data-dismiss="modal" onclick="sethiddenvalue(&apos;' + jsonData.data[i].CouponPercentage + '&apos;,&apos;' + jsonData.data[i].CouponCode + '&apos;,&apos;' + jsonData.data[i].MaximumAmount + '&apos;,&apos;' + jsonData.data[i].MinimumAmount + '&apos;,&apos;' + jsonData.data[i].IsUsed + '&apos;,&apos;' + jsonData.data[i].IsExpired + '&apos;) "> Apply Coupon</a>';
                            str += '</div></div></div>';
                        }

                        $("#scratchdiv").html('');
                        $("#scratchdiv").append(str);


                    },
                    error: function () {
                        alert(" errorr");
                    }

                });
                $('#AjaxLoader').hide();
            }, 100);
    }


    function sethiddenvalue(CouponPercentage, CouponCode, MaximumAmount, MinimumAmount, IsUsed, IsExpired) {
        if (IsUsed == 0 && IsExpired == 0) {
            $('#hdncp').val(CouponPercentage);
            $('#btnapplycoupon').hide();
            $('#btnremovecoupon').show();
            var AmountToPay = parseFloat($("#Amount").val());

            var percent = parseFloat(CouponPercentage);
            discount = parseFloat(AmountToPay * percent) / 100;
            if (MaximumAmount > 0 && MaximumAmount < discount) {
                discount = parseFloat(MaximumAmount);
            }
            if (MinimumAmount > 0 && MinimumAmount > discount) {
                discount = parseFloat(MinimumAmount);
            }

            var fee = $('#spnCreditCardFee').text();
            if (fee != '') {
                AmountToPay = AmountToPay + parseFloat(fee);
            }
            payable = AmountToPay - discount;

            $("#lblAmount").text(payable);
            $("#lblDelAmount").text(AmountToPay);
            $("#dvcouponapply").show();
            $('#hdncouponcode').val(CouponCode);
        }
        else if (IsUsed == 1) {
            $('#couponredeemed').show();
            $('#couponexpired').hide();
            $("#couponredeemedpop").modal("show");
        }
        else if (IsExpired == 1) {
            $('#couponredeemed').hide();
            $('#couponexpired').show();
            $("#couponredeemedpop").modal("show");

        }

    }

    function RemoveCoupon() {
        $('#btnapplycoupon').show();
        $('#btnremovecoupon').hide();
        discount = 0;
        var AmountToPay = parseFloat($("#Amount").val());
        var fee = $('#spnCreditCardFee').text();
        if (fee != '') {
            AmountToPay = AmountToPay + parseFloat(fee);
        }

        $("#lblAmount").text(AmountToPay);
        $("#dvcouponapply").hide();
    }
</script>

