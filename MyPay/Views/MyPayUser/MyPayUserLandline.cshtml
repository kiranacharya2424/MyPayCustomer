@model MyPay.Models.Add.AddUser
@{
    ViewBag.Title = "MyPayUserLandline";
    Layout = "~/Views/Shared/_MyPayUserLayout.cshtml";
}

<div class="nk-content px-2">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">

                <div class="nk-block">
                    <div class="row g-gs">
                        <div class="col-12 col-md-8 col-lg-9">
                            <div class="row g-2 h-100">


                                <div class="col-md-12">
                                    <div class="card card-bordered card-full border-bottom">

                                        <div class="card-inner border-bottom bg-lighter">
                                            <div class="card-title-group d-block d-sm-flex">
                                                <div class="card-title d-none d-sm-block">
                                                    <h6 class="title">  Landline</h6>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="card-inner">
                                            <!-- step1 -->
                                            <div class="p-2" id="DivLandline" style="display:none;">


                                                <div class="row gy-4">

                                                    <div class="col-12 col-sm-7 m-auto">
                                                        <div class="form-group">
                                                            <label class="form-label">Landline</label>
                                                            <div class="form-control-wrap">
                                                                <div class="input-group">
                                                                    <input type="text" id="Number" class="form-control form-control-lg fw-medium" maxlength="8" autocomplete="off" placeholder="Landline Number e.g. 15524415 " onkeypress="return isNumberKey(this, event);">
                                                                    <div class="input-group-append">
                                                                        <span class="input-group-text cursor-pointer"><em class="icon ni ni-contact fs-20px"></em></span>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                        </div>

                                                        <div class="form-group">
                                                            <label class="form-label">Amount</label>
                                                            <div class="form-control-wrap">
                                                                <div class="input-group">
                                                                    @Html.DropDownList("Amount", ViewBag.Amount as SelectList, "Select Recharge Amount", new { @class = "form-select form-control form-control-md", @id = "Amount", @onchange = "EnableDisablePayButton();" })
                                                                    <input type="hidden" value="@ViewBag.ServiceId" id="hdnServiceID" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <a href="javascript:void(0);" id="btnPay" class="btn btn-primary btn-lg d-block disabled">Pay</a>
                                                        </div>


                                                    </div>
                                                </div>
                                            </div>

                                            <!-- step2 -->
                                            @RenderPage("~/Views/MyPayUser/MyPayPaymentScreen.cshtml")



                                            <div class="p-2" style="margin:10px; text-align:center">

                                                <div id="dvMessage" class="form-group" style="color:red">
                                                    <span id="errormsg" style="color:red">
                                                        @ViewBag.Message
                                                    </span>
                                                    <span id="successmsg" style="color:green">
                                                        @ViewBag.SuccessMessage
                                                    </span>
                                                </div>
                                            </div>

                                        </div>




                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Right Sidebar -->
                        @if (@Session["IsKycVerified"] != null)
                        {
                            @RenderPage("~/Views/MyPayUser/MyPayRightSide.cshtml");
                        }
                    </div><!-- .row -->
                </div>


            </div>
        </div>
    </div>
</div>


<input type="hidden" id="hfKYCStatus" value='@ViewBag.IsKycVerified.ToString()'>
<input type="hidden" id="hfWalletbalance" value='@ViewBag.MyPayUserWalletbalance.ToString()'>
<input type="hidden" id="hfIsBankAdded" value='0'>
<input type="hidden" id="hfBankId" value="" />
<script src="~/Content/assets/MyPayUserApp/js/mypayuserapp_landline.js"></script>
<style>
    .paymentoption {
        min-height: 50px;
        border: 1px solid cadetblue;
        padding: 12px;
        margin: 10px 0px 10px 0px;
        border-radius: 3px;
        font-weight: bold;
        vertical-align: middle;
        cursor: pointer;
    }

    .content-light {
        color: #afafaf;
        font-weight: normal;
        font-size: 14px;
    }
</style>