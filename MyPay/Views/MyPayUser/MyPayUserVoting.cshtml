@model MyPay.Models.Add.AddUser
@{
    ViewBag.Title = "MyPayUserVoting";
    Layout = "~/Views/Shared/_MyPayUserLayout.cshtml";
}<!-- content -->
<div class="nk-content px-2">
    <input type="hidden" id="hfType" value="">
    <input type="hidden" id="hfCandidateUniqueId" value="">
    <input type="hidden" id="hfCompetitionId" value="">
    <input type="hidden" id="hfNoOfVotes" value="">
    <input type="hidden" id="hfPackageId" value="">
    <input type="hidden" id="Amount" value="">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block">
                    <div class="row g-gs">
                        <div class="col-12 col-md-8 col-lg-9">
                            <div class="row g-2 h-100">
                                <div class="col-md-12">
                                    <div class="card card-bordered card-full border-bottom">
                                        <div class="card-inner border-bottom bg-lighter-">
                                            <div class="card-title-group d-block d-sm-flex">
                                                <div class="card-title  d-sm-block w-100">
                                                    <div class="card-title align-items-center d-flex w-100 mb-0">
                                                        <h6 class="title d-flex mb-0">Voting</h6>
                                                        <a id="btn_back" class="btn btn-sm btn-danger ml-auto color-black d-flex align-items-center text-white"> Back</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>	<!--card-inner-->
                                        <!-- first_step start -->
                                        <div class="card-inner" style="display:none;" id="dvVotingList">
                                            <div class="row" id="dvVotingCompetitions">
                                            </div><!--row-->
                                        </div><!--card-inner-->
                                        <!-- first_step end -->
                                        <!-- second_step start -->
                                        <div class="card-inner" style="display:none;" id="dvCompetitionDetail">
                                            <div class="row">
                                                <div class="col-md-12" id="dvEventDetail">
                                                </div><!--col-md-12-->
                                                <div class="col-md-12 mt-4" id="dvEventCandidates">
                                                    <div class="d-flex mb-4 align-items-center justify-content-between border-bottom pb-3 votesearchhead">
                                                        <h5 class="card-title mb-0 mr-3">Vote for your favorite Candidate</h5>
                                                        <div class="form-group vote_searchgroup">
                                                            <div class="form-control-wrap">
                                                                <div class="form-icon form-icon-left"><em class="icon ni ni-search"></em></div>
                                                                <input type="text" class="form-control form-control-lg" id="search" placeholder="Search">
                                                            </div>
                                                        </div><!--vote_searchgroup-->
                                                    </div>
                                                    <div class="search_result">
                                                        <div class="row" id="dvSearchResult">

                                                        </div><!--row-->
                                                    </div><!--search_result-->
                                                </div><!--col-md-4-->
                                            </div><!--row-->
                                        </div><!--card-inner-->
                                        <!-- second_step end -->
                                        <!-- third_step start -->
                                        <div class="card-inner" style="display:none;" id="dvPackageDetail">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="card-inner-group">
                                                        <div class="partrow border-bottom pb-4 mb-4">
                                                            <div class="d-flex align-items-center justify-content-between">
                                                                <div class="d-flex align-items-center">
                                                                    <div class="user-avatar lg">
                                                                        <img id="imgCandidate" src="./images/alpinist.png" class="">
                                                                    </div>
                                                                    <div class="participant_info ml-3">
                                                                        <small class="text-uppercase" id="namecity">Kathmandu</small>
                                                                        <h6 class="title mt-1" id="namecandidate">Sajan Gurung</h6>
                                                                        <span class="text-soft" style="font-weight:600">CN: <span id="contestantno">0</span></span>
                                                                    </div>
                                                                </div>
                                                                <a href="javascript:void(0)" class="btn btn-primary btn-sm pt-1 pb-1" data-toggle="modal" data-target="#manualvote"><img src="/Content/assets/MyPayUserApp/images/voting-white.svg" class="mr-1">Enter Votes Manually</a>
                                                            </div><!--d-flex-->
                                                        </div><!-- partrow -->
                                                        <div class="card">
                                                            <div class="card-title">
                                                                <h6 class="fs-15px mt-0 mb-3">Available options to pay </h6>
                                                            </div>
                                                            <div class="row" id="dvPackages">
                                                            </div>
                                                        </div><!--card-inner bg-lighter-->
                                                    </div>
                                                </div><!--col-md-10 col-xl-6-->
                                            </div><!--row-->
                                        </div><!--card-inner-->
                                        <!-- third_step end -->
                                        <!-- fourth_step start -->
                                        <div class="card-inner" style="display:none;" id="dvPayments">
                                        </div><!--card-inner-->
                                        <!-- fourth_step end -->

                                        <div class="card-inner">
                                            <div class="row gy-4">

                                                <div class="col-12 col-sm-7 m-auto">
                                                    <div class="p-2" id="DivProceedToPay" style="display:none;">
                                                        <div class="nk-block-head-content">
                                                            <h6 class="title text-center">Select Payment Method </h6>
                                                        </div>
                                                        <div class="data-amount text-center mb-5">
                                                            <div class="fw-bold fs-20px">रु <span id="lblAmount">0.00</span></div>
                                                            <small class="text-soft">Total Payable Amount</small>
                                                        </div>
                                                        <a onclick="GetScratchedCoupons()" class="btn btn-sm btn-danger ml-auto color-black align-items-center text-white" id="btnapplycoupon" data-toggle="modal" data-target="#CouponApplypop">Apply coupon</a>
                                                        <a onclick="RemoveCoupon()" style="display:none" class="btn btn-sm btn-danger ml-auto color-black align-items-center text-white" id="btnremovecoupon">Remove coupon</a>
                                                        <div class="card-inner-group">
                                                            <div class="card-title">
                                                                <h6 class="fs-14px mt-3 mb-4">Available options to pay </h6>
                                                                <input type="hidden" id="hfPaymentMode" name="hfPaymentMode" value="0">
                                                            </div>
                                                            <div class="card-inner border p-3 payment-method active paymentoption" id="DivWallet">
                                                                <div class="nk-wg-action cursor-pointer">
                                                                    <div class="nk-wg-action-content">
                                                                        <em class="icon"><img src="~/Content/assets/MyPayUserApp/images/dashboard/walletsm.svg" width="22"></em>
                                                                        <div class="title">Wallet Balance <small class="text-soft ml-1">(For Instant Payment)</small></div>
                                                                    </div>
                                                                    <a href="javascript:void(0);" class="text-soft"><em class="icon ni ni-forward-ios pt-1"></em></a>
                                                                </div>
                                                            </div>
                                                            <div class="card-inner border p-3 payment-method mt-2" id="DivBank">

                                                            </div>
                                                            <div class="card-inner border p-3 payment-method mt-2 paymentoption" id="DivCoin" style="display:none;">
                                                                <div class="nk-wg-action cursor-pointer">
                                                                    <div class="nk-wg-action-content d-block">
                                                                        <div class="d-flex align-items-center">
                                                                            <em class="icon top-0"><img src="~/Content/assets/MyPayUserApp/images/dashboard/mypaycoin.svg" width="22"></em>
                                                                            <div class="title">MyPay Coins</div>
                                                                        </div>
                                                                        <div class="text-soft">
                                                                            <small class="d-block">Rs. <span id="smartpayRupees"></span> and <span id="smartpayCoins"></span>MyPay Coins<br /></small>
                                                                            <small class="d-block">Total MyPay Coins: <span id="smartpayCoinsTotal"></span></small>
                                                                        </div>
                                                                    </div>
                                                                    <a href="javascript:void(0);" class="text-soft"><em class="icon ni ni-forward-ios pt-1"></em></a>
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <a href="javascript:void(0);" id="btnProceedToPay" class="btn btn-primary btn-lg d-block mt-4">Proceed to Pay</a>
                                                            </div>
                                                        </div>
                                                    </div>


                                                </div>
                                            </div>
                                        </div>
                                        <div class="nk-block-head">
                                            <div class="nk-block">
                                                <div id="dvMessage" class="form-group" style="color:red">
                                                    <span id="errormsg" style="color:red">
                                                        @ViewBag.Message
                                                    </span>
                                                    <span id="successmsg" style="color:green">
                                                        @ViewBag.SuccessMessage
                                                    </span>
                                                </div>
                                            </div>
                                        </div><!-- .nk-block-head -->
                                    </div><!--card -->

                                </div><!--col-md-12-->

                            </div><!--row-->
                        </div>
                        <!-- Right Sidebar -->
                        @if (@Session["IsKycVerified"] != null)
                        {
                            @RenderPage("~/Views/MyPayUser/MyPayRightSide.cshtml");
                        }
                    </div><!-- .row -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- content -->
<div class="modal fade zoom" tabindex="-1" id="manualvote">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Enter Votes Manually</h5>
                <a href="javascript:void(0);" class="close" data-dismiss="modal" aria-label="Close">
                    <em class="icon ni ni-cross"></em>
                </a>
            </div>
            <div class="modal-body" id="dvManualVoteBody">

            </div>

        </div>
    </div>
</div>


<!-- Error Message -->
<div class="modal fade zoom" tabindex="-1" id="DivErrMessage" style="display:none;">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <img class="logo-dark logo-img" src="/Content/assets/MyPayUserApp/images/dashboard/logo-dark.png" srcset="/Content/assets/MyPayUserApp/images/logo-dark2x.png 2x" alt="logo-dark">
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="form-control-wrap text-center otp">
                        <h6 class="fs-14px mt-3 mb-4" id="txnMsg" style="color:#313131"></h6>
                    </div>
                </div>
                <div class="form-group">
                    <a id="btnMessageClose" class="btn btn-primary text-center text-white btn-lg d-block" data-dismiss="modal">Close</a>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Confirmation Details -->
<div class="modal fade zoom" tabindex="-1" id="PaymentPopup">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <h5 class="modal-title">Confirm your payment details</h5>

            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-borderless table-sm">
                        <tr>
                            <td>Number Of Votes</td>
                            <td class="fw-bold text-right"><span id="MobilePopup"></span></td>
                        </tr>
                        <tr>
                            <td>Amount</td>
                            <td class="fw-bold text-right">रु  <span id="AmountPopup"></span></td>
                        </tr>
                        @*<tr>
                                <td>Cashback</td>
                                <td class="fw-bold text-right">रु <span id="CashbackPopup"></span></td>
                            </tr>
                            <tr>
                                <td>Service Charge</td>
                                <td class="fw-bold text-right">रु <span id="ServiceChargesPopup"></span></td>
                            </tr>*@
                    </table>
                </div>
                <small class="text-soft d-block text-center mt-1">Do you want to continue?</small>
                <div class="nk-modal-action mt-3 mt-sm-4 text-center">
                    <a href="javascript:void();" class="btn btn-mw btn-light w-45" data-dismiss="modal">Close</a>
                    <a href="javascript:void();" id="btnOkPopup" class="btn btn-mw btn-primary w-45">Submit</a>
                </div>
            </div>

        </div>
    </div>
</div>


<!-- Pin Confirmation -->
<div class="modal fade zoom" tabindex="-1" id="DivPin" style="display:none;">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <h5 class="modal-title">Verify Transaction</h5>

            </div>
            <div class="modal-body">

                <div class="form-group">


                    <div class="form-control-wrap text-center otp">
                        <label class="form-label text-soft" for="Amount">Enter your Wallet Pin</label>
                        <input type="password" class="form-control form-control-lg fs-18px" maxlength="4" placeholder="oooo" id="Pin" name="Pin" onkeypress='return event.charCode >= 48 && event.charCode <= 57' />
                    </div>
                </div>
                <div class="form-group">
                    <a id="btnPin" class="btn btn-primary text-center text-white btn-lg d-block">Proceed To Pay</a>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <a href="javascript:void(0)" data-dismiss="modal">Close</a>
                        <a id="btnPinForgot" href="javascript:void(0)">Forgot Pin</a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>


<!-- Confirmation Details -->
<div class="modal fade zoom" tabindex="-1" id="PaymentSuccess" style="display:none;">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-body" style="text-align:center;">
                <img src="~/Content/assets/MyPayUserApp/images/jeni_success.png" />
                <h6 class="nk-modal-title text-center">Success</h6>
                <small class="text-soft d-block text-center mt-1">Transaction Completed Successfully</small>
                <div class="nk-modal-action mt-3 mt-sm-4 text-center">
                    <a href="/MyPayUser/MyPayUserTransactions" class="btn btn-mw btn-primary w-45">Ok</a>
                </div>

            </div>

        </div>
    </div>
</div>
@*===applycoupon*@
<div class="modal fade zoom" tabindex="-1" id="CouponApplypop" aria-modal="true" role="dialog" style="padding-right: 17px;">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-center" style="flex-direction: column;align-items: center;">
                <h6 class="modal-title text-soft">Coupons</h6>
            </div>
            <div class="modal-body" style="padding:15px 10px 0px 10px;">
                <div class="row" id="scratchdiv">
                </div>
            </div>
            <div class="modal-footer" style="display:inline-block;padding:5px 10px 20px 10px;">

                <div class="nk-modal-action mt-1 mt-sm-2 text-center">
                    <a href="javascript:void();" class="btn btn-mw btn-light w-45" data-dismiss="modal">Close</a>
                    @*<a href="javascript:void();" id="btnOkPopup" class="btn btn-mw btn-primary w-45">Submit</a>*@
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="hfKYCStatus" value='@ViewBag.IsKycVerified.ToString()'>
<input type="hidden" id="hfWalletbalance" value='@ViewBag.MyPayUserWalletbalance.ToString()'>
<input type="hidden" id="hfIsBankAdded" value='0'>
<input type="hidden" value="@ViewBag.ServiceId" id="hdnServiceID" />
<input type="hidden" id="hdncp" />
<input type="hidden" id="hfBankId" value="" />
<script src="~/Content/assets/MyPayUserApp/js/mypayuserapp_voting.js"></script>
<style>
    .tdBanners {
        border-bottom: 1px solid #efefef;
        margin: 10px;
        padding: 10px;
    }
</style>
<style>
    .modal-sm {
        max-width: 50%;
    }

    .modal-content {
        height: 50%;
    }
</style>