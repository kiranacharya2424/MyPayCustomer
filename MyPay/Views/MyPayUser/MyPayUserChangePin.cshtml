@model MyPay.Models.Add.AddUser
@{ ViewBag.Title = "MyPayUser ChangePin";
                Layout = "~/Views/Shared/_MyPayUserLayout.cshtml"; }
<!-- content -->
<div class="nk-content px-2">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block">
                    <div class="row g-gs">
                        <div class="col-12 col-md-8 col-lg-9">
                            <div class="row g-2 h-100">
                                <div class="col-md-12">
                                    <div class="card card-bordered card-full border-bottom">
                                        <div class="card-inner border-bottom bg-lighter">
                                            <div class="card-title-group d-block d-sm-flex">
                                                <div class="card-title  d-sm-block w-100">
                                                    <div class="card-title d-flex w-100 mb-0 align-items-center">
                                                        <h6 class="title d-flex mb-0">Change Transaction Pin</h6>
                                                        <a href="/MyPayUser/MyPayUserSettings" class="btn btn-sm btn-danger ml-auto color-black d-flex align-items-center text-white"> Back</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- ENd -->
                                        <!--step3 start-->
                                        <div class="card-inner mt-4">
                                            <div class="row">
                                                <div class="col-md-10 col-lg-7 col-xl-8 col-xxl-5 m-auto">
                                                    <div class="row">
                                                        <div class="col-md-12 mb-3">
                                                            <div class="form-group">
                                                                <div class="form-control-wrap">
                                                                    <a href="javascript:void(0)" class="form-icon form-icon-right new-pin-switch" data-target="oldpass">
                                                                        <em class="passcode-icon icon-show icon ni ni-eye-fill"></em>
                                                                        <em class="passcode-icon icon-hide icon ni ni-eye-off-fill"></em>
                                                                    </a>
                                                                    <input type="password" class="form-control form-control-lg form-control-outlined" maxlength="4" placeholder="Enter Pin" autocomplete="off" id="TransactionPin" name="TransactionPin" onkeypress='return event.charCode >= 48 && event.charCode <= 57' />
                                                                    @*<input type="text" class="form-control form-control-lg form-control-outlined" id="newtransactionpin" name="">*@
                                                                    <label class="form-label-outlined" for="newtransactionpin">New Transaction Pin</label>
                                                                </div>
                                                            </div>
                                                        </div><!--col-md-12-->
                                                        <div class="col-md-12 mb-4">
                                                            <div class="form-group">
                                                                <div class="form-control-wrap">
                                                                    <a href="javascript:void(0)" class="form-icon form-icon-right confirm-pin-switch" data-target="oldpass">
                                                                        <em class="passcode-icon icon-show icon ni ni-eye-fill"></em>
                                                                        <em class="passcode-icon icon-hide icon ni ni-eye-off-fill"></em>
                                                                    </a>
                                                                    <input type="password" class="form-control form-control-lg form-control-outlined" maxlength="4" placeholder="Confirm Pin" autocomplete="off" id="ConfirmTransactionPin" name="ConfirmTransactionPin" onkeypress='return event.charCode >= 48 && event.charCode <= 57' />
                                                                    @*<input type="text" class="form-control form-control-lg form-control-outlined" id="confirmtransactionpin" name="">*@
                                                                    <label class="form-label-outlined" for="confirmtransactionpin">Confirm Transaction Pin</label>
                                                                </div>
                                                            </div>
                                                        </div><!--col-md-12-->
                                                        <div class="col-md-12 mb-2">
                                                            <h5 class="title fs-14px">Old and New MPIN must be different</h5>
                                                        </div><!--col-md-12-->
                                                        <div class="col-md-12 mb-4">
                                                            <div class="form-group">
                                                                <div class="form-control-wrap">
                                                                    <a href="javascript:void(0)" class="form-icon form-icon-right current-passcode-switch" data-target="oldpass">
                                                                        <em class="passcode-icon icon-show icon ni ni-eye-fill"></em>
                                                                        <em class="passcode-icon icon-hide icon ni ni-eye-off-fill"></em>
                                                                    </a>
                                                                    <input type="password" class="form-control form-control-lg form-control-outlined" maxlength="20" placeholder="Current Password" id="CurrentPassword" onkeypress="return ValidateEnter(this,'btnReset',false,event);" autocomplete="off" name="CurrentPassword" />
                                                                    @*<input type="text" class="form-control form-control-lg form-control-outlined" id="currpass" name="">*@
                                                                    <label class="form-label-outlined" for="currpass">Current Password</label>
                                                                </div>
                                                            </div>
                                                        </div><!--col-md-12-->
                                                        <div class="col-12">
                                                            <a id="btnReset" href="javascript:void(0)" class="btn btn-primary btn-lg d-block">Reset Transaction Pin</a>
                                                        </div>
                                                        <div id="dvMessage" class="form-group" style="color:red">
                                                            <span id="errormsg" style="color:red">
                                                                @ViewBag.Message
                                                            </span>
                                                            <span id="successmsg" style="color:green">
                                                                @ViewBag.SuccessMessage
                                                            </span>
                                                        </div>
                                                    </div><!--row-->
                                                </div><!--col-md-10 col-lg-8 col-xl-5 m-auto-->
                                            </div><!--row-->
                                        </div><!--card-inner-->
                                    </div><!--card -->
                                </div><!--col-md-12-->
                            </div><!--row-->
                        </div>
                        <!-- Right Sidebar -->
                        @if (@Session["IsKycVerified"] != null)
                        {
            @RenderPage("~/Views/MyPayUser/MyPayRightSide.cshtml")}
                    </div><!-- .row -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- content -->

<script src="~/Content/assets/MyPayUserApp/js/mypayuserapp_ChangeTransactionpin.js"></script>
