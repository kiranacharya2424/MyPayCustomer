
@{
    Layout = "~/Views/Shared/_MyPayUserLayout.cshtml";
}
<div class="nk-content px-2">
    <input type="hidden" id="hdnId" />
    <input type="hidden" id="hdncouponcode" />
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block">
                    <div class="row g-gs">
                        <div class="col-md-12">
                            <div class="card card-bordered card-full border-bottom">
                                <div class="card-inner border-bottom bg-lighter-">
                                    <div class="card-title-group d-block d-sm-flex">
                                        <div class="card-title  d-sm-block w-100">
                                            <div class="card-title align-items-center d-flex w-100 mb-0">
                                                <h6 class="title d-flex mb-0">MyPay Coupons</h6>
                                                <a href="/MyPayUserLogin/Dashboard" id="btn_back" class="btn btn-sm btn-danger ml-auto color-black d-flex align-items-center text-white"> Back</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>	<!--card-inner-->
                                <div class="card-inner">
                                    <div id="waittext">
                                        Please wait while coupons are being loaded.
                                    </div>
                                    <div class="row" id="scratchdiv">

                                    </div>
                                    <div class="col-12">
                                        <div class="form-group text-center mt-5">
                                            <a href="javacript:void(0);" id="showmore" onclick="ShowMore();" class="btn btn-primary btn-lg">Show More</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="modal fade zoom" tabindex="-1" id="myModal" style="display:none;">
    <div class="modal-dialog modal-sm" role="document">
        <div style="min-height: 272px !important;" class="modal-content scratchafter">
            <div class="modal-body" style="text-align:center;">
                <img id="popupimage" src="~/Content/assets/MyPayUserApp/images/scratchcard.png" class="scratchcoupon_card" onmouseover="scratchCouponCard()" />
                <h6 class="nk-modal-title text-center"></h6>
                @*<small class="text-soft d-block text-center mt-1">Transaction Completed Successfully</small>*@
                <div class="card" id="Card">

                </div>
            </div>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        </div>
    </div>
</div>
<input type="hidden" value="10" id="hdnTake" />
<input type="hidden" value="0" id="hdnSkip" />
<script src="~/Content/assets/MyPayUserApp/js/mypayuserapp_Couponscratched.js"></script>
<style>
    .votingsec {
        background-size: cover;
        min-height: 185px;
        display: flex;
        width: 100%;
    }

    .scratchinner {
        display: block;
        position: relative;
        height: 100%;
    }

    .scratchinner {
        position: absolute;
        top: 0;
        bottom: 0;
        width: 100%;
        left: 0;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        justify-content: center;
        padding: 20px 15px;
        flex-direction: column;
    }

        .scratchinner:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgb(0 0 0 / 19%);
            border-radius: 3px;
        }

        .scratchinner a#btn_scratch {
            position: absolute;
            bottom: 0;
            width: 100%;
            text-align: center;
            justify-content: center;
            padding: 10px;
            font-size: 15px;
            background: #e45415;
        }

        .scratchinner label {
            width: 100%;
            margin: 2px 0;
            text-align: center;
            font-size: 16px;
            line-height: 20px;
            color: #fff;
            font-weight: 500;
            position: relative;
        }

    .couponsscratched-wt .scratchinner label.percent {
        font-size: 24px;
        margin: 5px 0;
        color: #e45415;
    }

    .scratchinner label:first-child {
        font-size: 20px;
        font-weight: 400;
    }

    .scratchinner label:last-child {
        font-size: 15px;
    }

    /* .couponsscratched-wt .scratchinner {
        background: #f4f4f4;
    }*/

    .couponsscratched-wt .scratchinner::before {
        background: none;
    }

    .couponsscratched-wt .scratchinner label {
        color: #000;
    }

    .scratchcoupon_card {
        width: 250px;
    }

    .card label:first-child {
        font-size: 20px !important;
        font-weight: 500;
    }

    .card label.percent {
        font-size: 24px;
        margin: 5px 0;
        color: #e45415;
        font-weight: 500;
    }

    .card label:last-child {
        font-size: 15px;
        font-weight: 500;
    }


    label {
        display: inline-block;
        margin-bottom: 5px;
        font-weight: 500;
        font-size: 20px;
    }
</style>
