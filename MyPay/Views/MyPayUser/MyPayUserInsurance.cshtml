

@model MyPay.Models.Add.AddUser
@{
    ViewBag.Title = "MyPayUserInsurance";
    Layout = "~/Views/Shared/_MyPayUserLayout.cshtml";
}

<div class="nk-content px-2">
    <input type="hidden" id="hdnAmount" value="" />
    <input type="hidden" id="hdnMobileNumber" value="" />
    <input type="hidden" id="hdnSessionId" value="" />
    <input type="hidden" id="hdnTxnId" value="" />
    <input type="hidden" id="hdnPolicyNumber" value="" />
    <input type="hidden" id="hfBankId" value="" />
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block">
                    <div class="row g-gs">
                        <div class="col-12 col-md-8 col-lg-9">
                            <div class="row g-2 h-100">
                                <div class="col-md-12">
                                    <div class="card card-bordered card-full border-bottom">
                                        <div class="card-inner border-bottom bg-lighter">
                                            <div class="card-title-group d-block d-sm-flex">
                                                <div class="card-title d-none d-sm-block">
                                                    <h6 class="title" id="hdheading">Insurance</h6>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-inner">
                                            <!-- step1 -->
                                            <div class="p-2" id="DivInsurance" style="display:none;">

                                                <div class="row gy-4">
                                                    <div class="col-12 col-sm-7 m-auto">
                                                        <div class="form-group">
                                                            <label class="form-label">Select Insurance Type</label>
                                                            <div class="form-control-wrap">
                                                                <div class="input-group">
                                                                    <table width="100%">
                                                                        @{
                                                                            List<MyPay.Models.Get.GetService_Providers> objDisplayList = ViewBag.InsuranceList as List<MyPay.Models.Get.GetService_Providers>;
                                                                            for (int i = 0; i < objDisplayList.Count; i++)
                                                                            {
                                                                                <tr class="nk-tb-item">
                                                                                    <td class="nk-tb-col" style=" height: 100px;  border-bottom: 1px solid #efefef;" onclick="return showInsuranceDetails(@objDisplayList[i].ProviderTypeId,'@objDisplayList[i].ProviderName.Replace("INSURANCE", "").ToString()');">
                                                                                        <img src="@objDisplayList[i].LogoURL" width="80" />
                                                                                        @objDisplayList[i].ProviderName.Replace("INSURANCE", "").ToString()
                                                                                        @if (@objDisplayList[i].MPCoinsCashback != "0.00")
                                                                                        {
                                                                                            <span class="badge rounded-pill bg-warning cashback-badge cashbackhide" style="display:inline;">@objDisplayList[i].CashbackPercentage% cashback</span>
                                                                                            <span class="badge rounded-pill bg-warning coin-badge cashbackhide" style="display:inline;">@objDisplayList[i].MPCoinsCashback% coins</span>
                                                                                        }
                                                                                        else
                                                                                        {
                                                                                            <span class="badge rounded-pill bg-warning cashback-badge cashbackhide" style="display:inline;">@objDisplayList[i].CashbackPercentage% cashback</span>
                                                                                        }

                                                                                    </td>
                                                                                </tr>
                                                                            }
                                                                        }
                                                                    </table>
                                                                    <input type="hidden" value="" id="hdnProviderTypeId" />
                                                                    <input type="hidden" value="" id="hdnProviderName" />
                                                                    <input type="hidden" value="@ViewBag.ServiceId" id="hdnServiceID" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- step1.1 -->
                                            <div class="p-2" id="DivStep1" style="display:none;">
                                                <div class="row gy-4">
                                                    <div class="col-12 col-sm-7 m-auto">
                                                        <div class="form-group" id="dvSelect" style="display:none;">
                                                            <label class="form-label text-soft"> Select Insurance</label>
                                                            <div class="form-control-wrap">
                                                                <div class="input-group">
                                                                    <select id="ddlInsuranceType" class="form-control form-control-lg" placeholder="Select Insurance">
                                                                        <option value="0">Select Insurance</option>
                                                                        <option value="neco-insurance">Neco Insurance</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group" style="text-align:center;">
                                                            <a href="javascript:void(0);" id="btnGetDetail" class="btn btn-primary btn-lg d-block mt-4 m-b-4 ">Get Details</a>
                                                            <a href="javascript:void(0);" id="btnPayBack">Back</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="p-2" id="DivStep2" style="display:none;">
                                                <div class="row gy-4">
                                                    <div class="col-12 col-sm-7 m-auto">
                                                        <div id="dvInputDetails" style="display:none;">

                                                        </div>
                                                        <div id="dvDebitNoteInputDetails" style="display:none;">
                                                            <div class="form-group" id="dvDebitNote">
                                                                <label class="form-label text-soft">Debit Note No</label>
                                                                <div class="form-control-wrap">
                                                                    <div class="input-group">
                                                                        <input type="text" id="DebitNote" class="form-control form-control-lg fw-medium" autocomplete="off" placeholder="Debit Note No">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div id="dvPolicyInputDetails" style="display:none;">
                                                            <div class="form-group" id="dvPolicyNumber">
                                                                <label class="form-label text-soft">Policy Number</label>
                                                                <div class="form-control-wrap">
                                                                    <div class="input-group">
                                                                        <input type="text" id="PolicyNumber" class="form-control form-control-lg fw-medium" autocomplete="off" placeholder="Policy Number">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="form-group" id="dvDateOfBirth">
                                                                <label class="form-label text-soft">Date Of Birth</label>
                                                                <div class="form-control-wrap">
                                                                    <div class="input-group">
                                                                        <input type="text" id="DateofBirth" class="form-control form-control-lg fw-medium datepicker" autocomplete="off" placeholder="Date of Birth">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group" style="text-align:center;">
                                                            <a href="javascript:void(0);" id="btnGetInsuranceDetail" class="btn btn-primary btn-lg d-block mt-4 mb-4">Get Details</a>
                                                            <a href="javascript:void(0);" id="btnPayBackStep1">Back</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="p-2" id="DivDetail" style="display:none;">
                                                <div class="row gy-4">
                                                    <div class="col-12 col-sm-7 m-auto">
                                                        <div class="form-control-wrap">
                                                            <div class="input-group" id="tblInsuranceDetail">

                                                            </div>
                                                        </div>
                                                        <div class="p-4 bg-lighter mt-2 mb-4">
                                                            <div class="p-3 text-center border-dashed">
                                                                <span class="fs-18px fw-medium"><small class="fw-medium">Rs.</small><span id="lblAmountInsurance">0.00</span></span>
                                                                <p class="m-0 text-soft fs-12px">Total Payable Amount</p>
                                                                <div class="d-flex justify-content-between align-items-center mt-3 mb-1">
                                                                    <label class="text-soft fs-13px m-0">Cashback</label>
                                                                    <span class="fs-13px fw-medium">Rs. <span id="lblCashback">0.00</span></span>
                                                                </div><!--d-flex-->
                                                                <div class="d-flex justify-content-between align-items-center">
                                                                    <label class="text-soft fs-13px m-0">Service Charge</label>
                                                                    <span class="fs-13px fw-medium">Rs.<span id="lblServiceCharge">0.00</span></span>
                                                                </div><!--d-flex-->
                                                            </div><!--border-dashed-->
                                                        </div>
                                                        <div class="form-group" style="text-align:center;">
                                                            <a href="javascript:void(0);" id="btnPay" class="btn btn-primary btn-lg d-block ">Proceed</a>
                                                            <a href="javascript:void(0);" id="btnDetailBack">Back</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- step2 -->
                                            @RenderPage("~/Views/MyPayUser/MyPayPaymentScreen.cshtml")

                                            <div class="p-2" style="margin:10px; text-align:center">
                                                <div class="row gy-4">
                                                    <div class="col-12 col-sm-7 m-auto">
                                                        <div id="dvMessage" class="form-group" style="color:red">
                                                            <span id="errormsg" style="color:red">
                                                                @ViewBag.Message
                                                            </span>
                                                            <span id="successmsg" style="color:green">
                                                                @ViewBag.SuccessMessage
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Right Sidebar -->
                        @if (@Session["IsKycVerified"] != null)
                        {
                            @RenderPage("~/Views/MyPayUser/MyPayRightSide.cshtml");
                        }
                    </div><!-- .row -->
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="hfKYCStatus" value='@ViewBag.IsKycVerified.ToString()'>
<input type="hidden" id="hfWalletbalance" value='@ViewBag.MyPayUserWalletbalance.ToString()'>
<input type="hidden" id="hfIsBankAdded" value='0'>
<script src="~/Content/assets/MyPayUserApp/js/mypayuserapp_insurance.js"></script>
<style>
    .paymentoption {
        min-height: 50px;
        border: 1px solid cadetblue;
        padding: 12px;
        margin: 10px 0px 10px 0px;
        border-radius: 3px;
        font-weight: bold;
        vertical-align: middle;
        cursor: pointer;
    }

    .content-light {
        color: #afafaf;
        font-weight: normal;
        font-size: 14px;
    }
</style>
<script>
    $(document).ready(function () {
        $('.datepicker').datepicker({
            format: "yyyy-mm-dd",
            endDate: '+0d'
        });

    });

</script>
