
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="nk-content ">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block">
                    <div class="card card-bordered">
                        <div class="card-aside-wrap">
                            <div class="card-content">
                                <div class="card-inner col-sm-12" style="margin:auto">
                                    <div class="nk-block-head">
                                        <h4>Bank Settings</h4>
                                        <p>
                                            <b>Note:</b> The Bank selected in Transfer Type will be used during Bank Transfer.
                                        </p>
                                    </div>
                                </div>
                                <div class="card-inner col-sm-6" style="margin:auto">
                                    <div class="nk-block">
                                        <div class="form-group">
                                            <div class="form-label-group">
                                                <label class="form-label" for="password">Bank Transfer Type</label>

                                            </div>
                                            <div class="form-control-wrap">
                                                <select name="BankTransferType" id="BankTransferType" class="form-select form-control form-control-md form-control-outlined">
                                                    @*<option value="0">--- Select Status ---</option>*@
                                                    <option value="1">NCHL</option>
                                                    <option value="2">NPS</option>
                                                </select>
                                                <input type="hidden" value="@ViewBag.BankTransferType" id="hdnBankTransferType" name="hdnBankTransferType" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <button id="btnSubmit" class="btn btn-lg btn-primary btn-block">Update</button>
                                        </div>
                                        <div class="form-group">
                                            <span id="errormsg" style="color:red">
                                                @ViewBag.Message
                                            </span>
                                            <span id="successmsg" style="color:green">
                                                @ViewBag.SuccessMessage
                                            </span>
                                        </div>
                                    </div><!-- .nk-block -->
                                </div><!-- .card-inner -->
                            </div><!-- .card-content -->
                        </div><!-- .card-aside-wrap -->
                    </div><!-- .card -->
                </div><!-- .nk-block -->
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#BankTransferType").val($("#hdnBankTransferType").val());
    });
</script>