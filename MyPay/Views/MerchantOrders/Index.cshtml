    function AllMerchantOrderexported(obj, e) {
        var OrderId = $("#OrderId").val();
        var fromdate = $("#fromdate").val();
        var todate = $("#todate").val();
        var TrackerId = $("#TrackerId").val();
        var MemberName = $("#MemberName").val();
        var MemberContactNumber = $("#MemberContactNumber").val();
        var Status = $("#status :selected").val();
        var TransactionId = $("#TransactionId").val();

        if (window.location.href.indexOf($("#hdndumpurl").val()) > -1) {
            if (fromdate == "") {
                alert("Please select Start Date");
                return false;
            }
            else if (todate == "") {
                alert("Please select End Date");
                return false;
            }
            else if (fromdate != "" && todate != "") {
                var enddate = new Date(todate);
                var startdate = new Date(fromdate);
                var difference = enddate - startdate;
                var totaldays = Math.ceil(difference / (1000 * 3600 * 24));
                if (totaldays > 7) {
                    alert("You cannot export report more than 7 days. So please select StartDate and EndDate accordingly.");
                    return false;
                }
                else {
                    $("#AllMerchantOrderExport").hide();
                }
            }
        }
        $.ajax({
                        type: "POST",
                        url: '@Url.Action("ExportExcelMerchantOrdersDump", "MerchantOrders")', //call your controller and action
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        async: true,
                        data: '{"TransactionId":"' + TransactionId + '","Status":"' + Status + '","OrderId": "' + OrderId + '", "TrackerId": "' + TrackerId + '","MemberName":"' + MemberName + '","fromdate":"' + fromdate + '","todate":"' + todate + '","MemberContactNumber":"' + MemberContactNumber + '"}',

                    }).done(function (data) {
                        //get the file name for download
                        if (data.fileName != "") {
                            alert("Your exported file is being generated.Please download the new excel from the download link.");
                        }
                        else {
                            alert(data.errorMessage);
                        }
                    });
    }
    function AllMerchantOrdersDownload(e) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("DownloadMerchantOrdersFileName", "MerchantOrders")', //call your controller and action
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            async: false,
            data: '',

        }).done(function (data) {
            //get the file name for download
            if (data != "" && data.fileName != "") {
                //use window.location.href for redirect to download action for download the file
                window.location.href = "@Url.RouteUrl(new { Controller = "MerchantOrders", Action = "DownloadMerchantOrdersFile" })?fileName=" + data.fileName;
            }
            else {
                alert("No file found to download.");
            }
        });
    }
