
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="nk-content ">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block">
                    <div class="card card-bordered">
                        <div class="card-aside-wrap">
                            <div class="card-content">
                                <div class="card-inner col-sm-6" style="margin:auto">
                                    <div class="nk-block-head">
                                        <h4>MPCoins Date  Settings</h4>
                                    </div>
                                    <div class="nk-block">
                                        <div class="form-group">
                                            <div class="form-label-group">
                                                <label class="form-label" for="password">MPCoins Flush Current Date is : <b style="color:green; font-size:16px;">@ViewBag.MPCoinsDateSettings</b></label>
                                                <input type="hidden" value="@ViewBag.MPCoinsDateSettings" id="hdnMPCoinsDateSettings" name="hdnMPCoinsDateSettings" />
                                            </div>
                                            @*<div class="form-label-group">
                                                <label class="form-label" for="password">Enter  MPCoins New Flush Date Below: </label>

                                            </div>
                                            <div class="form-control-wrap">
                                                <input name="MPCoinsDateSettings" id="MPCoinsDateSettings" class="form-control form-control-md date-picker" type="text" autocomplete="off"  readonly="readonly" placeholder="Enter new flush date here" />
                                            </div>*@
                                        </div>
                                        <div class="form-group">
                                            @*<button id="btnSubmit" class="btn btn-lg btn-primary btn-block">Update</button>*@
                                        </div>
                                        <div class="form-group">
                                            <span id="errormsg" style="color:red">
                                                @ViewBag.Message
                                            </span>
                                            <span id="successmsg" style="color:green">
                                                @ViewBag.SuccessMessage
                                            </span>
                                        </div>
                                    </div><!-- .nk-block -->
                                </div><!-- .card-inner -->
                            </div><!-- .card-content -->
                        </div><!-- .card-aside-wrap -->
                    </div><!-- .card -->
                </div><!-- .nk-block -->
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.date-picker').datepicker({
            format: "dd-M-yyyy"
        }).datepicker();
        $("#btnSubmit").click(function (e) {
            if ($("#MPCoinsDateSettings").val() == "") {
                $("#errormsg").html("Please enter date");
                e.preventDefault();
                e.stopPropagation();
                return false;
            }
        });
    });
</script>